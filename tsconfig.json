{
  "compilerOptions": {
    "moduleResolution":"nodenext",
    "strict": true,
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true
  },

  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "bin/*.ts"]
}
